
{% for message in app.flashes('success') %}
    <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50" role="alert">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('danger') %}
    <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">{{ message }}</div>
{% endfor %}
